{
  "swagger": "2.0",
  "info": {
    "description": "A Swagger representation of the endpoints that JumbaLiar is currently serving.",
    "title": "JumbaLiar"
  },
  "host": "localhost",
  "basePath": "/services",
  "tags": [
    {
      "name": "Authorization"
    },
    {
      "name": "SSE"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/authorization/login": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "Log in to JumbaLiar",
        "parameters":[
          {
             "in":"body",
             "name":"body",
             "required":true,
             "schema":{
                "$ref":"#/definitions/LoginRequest"
             }
          }
       ],
       "responses":{
            "200":{
              "description":"Success",
              "schema":{
                "$ref":"#/definitions/TokenResponse"
              }
            }
         }
      }
    },
    "/authorization/me": {
      "get": {
        "tags": [
          "Authorization"
        ],
        "summary":"Get Account associated with your token",
       "responses":{
            "200":{
              "description":"Success",
              "schema":{
                "$ref":"#/definitions/Account"
              }
            }
        },
        "security": [
          {
            "BearerAuth": []
          }
          ]
      }
    },
    "/allsse":{
      "get":{
         "tags":[
            "SSE"
         ],
         "summary":"Get remote connections",
         "produces":["application/json"],
         "responses":{
            "200":{
               "description":"Success",
               "schema":{
                  "type":"array",
                  "items":{
                     "type":"string"
                  }
               }
            }
         }
      },
      "post":{
         "tags":[
            "SSE"
         ],
         "summary":"SSE",
         "consumes":[
            "application/json"
         ],
         "produces":[
            "text/event-stream"
         ],
         "parameters":[
            {
               "in":"body",
               "name":"body",
               "required":true,
               "schema":{
                  "$ref":"#/definitions/ChannelList"
               }
            }
         ],
         "responses":{
            "200":{
               "description":"Success",
               "schema":{
                  "$ref":"#/definitions/EventOutput"
               }
            }
         }
      }
   },
   "/accounts":{
    "post":{
       "responses":{
          "200":{
             "description":"Success",
             "schema":{
                "$ref":"#/definitions/Account"
             }
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "parameters":[
          {
             "in":"body",
             "name":"body",
             "required":true,
             "schema":{
                "$ref":"#/definitions/Account"
             }
          }
       ],
       "tags":[
          "Account"
       ],
       "summary":"Used by JumbaLiar",
       "description": "Default endpoint for JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[
                
             ]
          }
       ]
    },
    "get":{
       "responses":{
          "200":{
             "description":"Success",
             "schema":{
                "type":"array",
                "items":{
                   "$ref":"#/definitions/Account"
                }
             }
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "tags":[
          "Account"
       ],
       "description": "Default endpoint for JumbaLiar",
       "summary":"Used by JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[]
          }
       ]
    }
 },
 "/accounts/{id}":{
    "delete":{
       "responses":{
          "200":{
             "description":"true"
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "parameters":[
          {
             "name":"id",
             "in":"path",
             "required":true,
             "type":"string"
          }
       ],
       "tags":[
          "Account"
       ],
       "description": "Default endpoint for JumbaLiar",
       "summary":"Used by JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[
                
             ]
          }
       ]
    },
    "put":{
       "responses":{
          "200":{
             "description":"Success",
             "schema":{
                "$ref":"#/definitions/Account"
             }
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "parameters":[
          {
             "name":"id",
             "in":"path",
             "required":true,
             "type":"string"
          },
          {
             "in":"body",
             "name":"body",
             "required":true,
             "schema":{
                "$ref":"#/definitions/Account"
             }
          }
       ],
       "tags":[
          "Account"
       ],
       "description": "Default endpoint for JumbaLiar",
       "summary":"Used by JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[]
          }
       ]
    },
    "get":{
       "responses":{
          "200":{
             "description":"Success",
             "schema":{
                "type":"array",
                "items":{
                   "$ref":"#/definitions/Account"
                }
             }
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "parameters":[
          {
             "name":"id",
             "in":"path",
             "required":true,
             "type":"string"
          }
       ],
       "tags":[
          "Account"
       ],
       "summary":"Used by JumbaLiar",
       "description": "Default endpoint for JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[]
          }
       ]
    }
 },
 "/accounts/query":{
    "post":{
       "responses":{
          "200":{
             "description":"Success",
             "schema":{
                "type":"array",
                "items":{
                   "$ref":"#/definitions/Account"
                }
             }
          },
          "403":{
             "description":"Forbidden"
          }
       },
       "parameters":[
          {
             "in":"body",
             "name":"body",
             "required":true,
             "schema":{
                "type":"array",
                "items":{
                   "$ref":"#/definitions/JsonFilter"
                }
             }
          }
       ],
       "tags":[
          "Account"
       ],
       "description": "Default endpoint for JumbaLiar",
       "summary":"Used by JumbaLiar",
       "produces":[
          "application/json"
       ],
       "security":[
          {
             "BearerAuth":[]
          }
       ]
      }
    }
  },
  "securityDefinitions": {
    "BearerAuth": {
      "description": "Auth using the Authorization Header",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "LoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "TokenResponse":{
      "type":"object",
      "properties":{
         "token":{
            "type":"string"
         }
      }
   },
    "ChannelList":{
      "type":"object",
      "properties":{
         "dtoList":{
            "type":"array",
            "items":{
               "type":"string"
            }
         }
      }
   },
   "EventOutput": {
    "type": "object",
      "properties": {
        "changeType": {
          "type": "string",
          "enum": [
            "CREATED",
            "UPDATED",
            "DELETED"
          ]
        },
        "dtoName": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "JsonFilter": {
      "type": "object",
      "properties": {
        "fieldName": {
          "type": "string"
        },
        "filterType": {
          "type": "string",
          "enum": [
            "StartsWith",
            "EndsWith",
            "Contains",
            "Regex",
            "Equals",
            "In",
            "LongEquals",
            "LongGreaterThan",
            "LongGreaterThanOrEqual",
            "LongLessThan",
            "LongLessThanOrEqual"
          ]
        },
        "check": {
          "type": "string"
        }
      }
    },
    "Account": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    }
  }
}
